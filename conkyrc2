# --- Window Layout & Options --- #

own_window yes
own_window_class Conky
own_window_type desktop
own_window_type normal
own_window_argb_visual yes
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
background yes

double_buffer yes
use_spacer right
use_xft yes
#xftalpha 1
alignment top_left
gap_x 1650
gap_y 935

# --- Colours, Sizes, Fonts & Margins --- #
update_interval 1.0
maximum_width 250
minimum_size 300 100

stippled_borders 3
border_width 10

# --- Text --- #
draw_outline no
draw_borders no
uppercase no
draw_shades no
override_utf8_locale yes
text_buffer_size 1024

#main color
template0 181a19
template5 14ae76
#second color
template1 dadada
#third color
template2 dadada

cpu_avg_samples 3

TEXT
${font Play:size=14:bold}${color $template0}RAM and SWAP Usage ${hr 2}
${font Play:size=10}${color $template1}RAM ${color $template2}${memperc}% $alignr${mem /} / ${memmax /}
${color $template5}${membar 3.180}
${color $template1}SWAP ${color $template2}${swapperc}% $alignr${swap /} / ${swapmax /}
${color $template5}${swapbar 3.180}
