# --- Window Layout & Options --- #

own_window yes
own_window_class Conky
own_window_type desktop
own_window_type normal
own_window_argb_visual yes
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
background yes

double_buffer yes
use_spacer right
use_xft yes
#xftalpha 1
alignment top_left
gap_x 640
gap_y 50

# --- Colours, Sizes, Fonts & Margins --- #
update_interval 1.0
maximum_width 700
minimum_size 700 100

stippled_borders 3
border_width 10

# --- Text --- #
draw_outline no
draw_borders no
uppercase no
draw_shades no
override_utf8_locale yes
text_buffer_size 1024

#main color
template0 181a19
template5 1793d1
#second color
template1 dadada
#third color
template2 dadada

